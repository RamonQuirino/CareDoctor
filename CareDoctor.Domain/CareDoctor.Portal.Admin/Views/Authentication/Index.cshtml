@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Acesso a Area Restrita</h2>
<form ng-controller="AuthenticationController" ng-submit="login(credentials)">
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" ng-model="credentials.mail">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" ng-model="credentials.password">
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox"> Lembrar senha
        </label>
    </div>
    <button type="submit" class="btn btn-default">Entrar</button>
</form>
@Scripts.Render("~/Scripts/Views/Authentication/index.js")
